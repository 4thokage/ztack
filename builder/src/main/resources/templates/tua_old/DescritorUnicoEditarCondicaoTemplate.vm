<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">

	<h:form id="#{descritorTua.prefixoComponentesUi}dialogEditar$entityName$Form">

		<p:messages id="#{descritorTua.prefixoComponentesUi}msg$entityName$Edit" showDetail="false" autoUpdate="true" closable="true" />

		<p:panelGrid id="#{descritorTua.prefixoComponentesUi}mostrarEditarConflito$entityName" columns="2" cellpadding="4" styleClass="panelGridCondicaoForm">

			<ui:include src="$entityName$FormView">
				<ui:param name="condicao"
					value="#{descritorTua.condicaoSelecionada}" />
				<ui:param name="descritorTua" value="#{descritorTua}" />
			</ui:include>

			<f:facet name="footer">
				<p:outputPanel styleClass="alinharDireita">
					<p:commandButton value="Confirmar" icon="fa fa-check"
						update="#{caminhoTabela}#{descritorTua.prefixoComponentesUi}tabela$entityName #{descritorTua.prefixoComponentesUi}msg$entityName$Edit #{caminhoTabela}#{descritorTua.prefixoComponentesUi}Msg$entityName"
						oncomplete="processaRequest(xhr, status, args, 'dialogEditarCondicao','#{descritorTua.prefixoComponentesUi}dialogEditar$entityName$Form');"
						action="#{descritorTua.editarCondicao}">
					
						<f:ajax execute="@form" render="@none" listener="#{tuaBean.detetarConflitoFase()}"/>
							
					</p:commandButton>
	
					<p:commandButton type="reset" value="Limpar" icon="fa fa-trash-o"></p:commandButton>
				</p:outputPanel>
			</f:facet>

		</p:panelGrid>

	</h:form>
	
</ui:composition>